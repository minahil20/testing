<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@color/black"
    android:weightsum="1">
    <LinearLayout
        android:weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textAlignment="viewEnd"
            android:textSize="30dp"
            android:text="Sign In">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/musify"
        android:weight="0.2"
        android:layout_width="150dp"
        android:layout_height="250dp"
        >
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:src="@drawable/musify"
            >

        </ImageView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/musifytext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/musify"
        android:weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Musify"
            android:textColor="@color/white"
            android:textSize="40dp">

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/musifytext"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weight="0.2"
        android:gravity="center">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="   Email"
            android:textColor="#F1E471">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/email"
        android:id="@+id/black"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weight="0.2"
        android:gravity="center"
        android:orientation="horizontal">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"></EditText>

    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/black"
        android:id="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       android:weightSum="1"
        android:orientation="horizontal"
        >
<LinearLayout
    android:id="@+id/passblock"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.5"
    >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:text="Password "
            android:textColor="#F1E471">


        </EditText>
</LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:textAlignment="viewEnd"
                android:text="Show "
                android:textColor="#F1E471">


            </EditText>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/black2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/pass">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"></EditText>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/spbutton"
        android:layout_below="@+id/black2"
        android:layout_width="match_parent"
        android:layout_height="57dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:src="@drawable/sp">

    </ImageView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp">

        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_below="@id/spbutton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"

        android:text="Forgot your password?"
        android:textColor="#FFEB3B">

    </EditText>
    </LinearLayout>


</RelativeLayout>