<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/second"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightsum="0.5"
    tools:context=".signin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="19dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           android:fontFamily="sans-serif-condensed"
            android:textSize="20dp"
            android:background="@color/black"
            android:text="Sign Up"
            android:textAlignment="textEnd"
            android:textColor="@color/white">

        </EditText>
    </LinearLayout>

    <LinearLayout

        android:id="@+id/musify"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:src="@drawable/musify">


        </ImageView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/musifytext"
        android:layout_below="@+id/musify"
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="            Musify"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="30dp"></TextView>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/name"
        android:layout_below="@id/musifytext"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">

        <EditText
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="   Name"
            android:textColor="#F1E471">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/name"
        android:id="@+id/black"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">

        <EditText
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:background="@color/black">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_below="@id/black"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">


        <EditText
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="   Email"
            android:textColor="#F1E471">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/email"
        android:id="@+id/black2"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">

        <EditText
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:background="@color/black">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pass"
        android:layout_below="@id/black2"
        android:layout_weight="0.1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">


        <EditText
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:background="@color/white"

            android:text="   Password                                               Show"
            android:textColor="#F1E471">

        </EditText>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/gender"
        android:layout_below="@+id/pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-condensed"
            android:gravity="left"
            android:text="    Gender"
            android:textColor="#FFC107"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gengrp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/gender"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_weight="0.25"
            android:id="@+id/gen"
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/man">

            </ImageView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gen1"

            android:layout_weight="0.25"
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"

                android:src="@drawable/woman">

            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gen2"

            android:layout_weight="0.25"
            android:layout_width="90dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"

                android:src="@drawable/notspecified">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkbox"
        android:layout_below="@id/gengrp"
        android:layout_width="30dp"
        android:layout_height="700dp"

        >
        <CheckBox

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left"
            >
        </CheckBox>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/check"
        android:orientation="vertical"
        android:layout_below="@+id/gengrp"
        android:layout_width="400dp"
        android:layout_height="80dp"
        >
        <EditText

            android:layout_width="350dp"
            android:layout_height="80dp"
            android:text="       I would like to receive your newsletter and other promotional information."
            android:textColor="@color/white"
            >
        </EditText>
    </LinearLayout>
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/check">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/sp">

        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28dp">

        </TextView>

    </RelativeLayout>



</RelativeLayout>