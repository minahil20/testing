<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".addplaylist">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_arrow_back_24"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">



            <TextView
                android:layout_width="900dp"
                android:layout_height="100dp"
                android:textAlignment="textStart"
                android:text="   Add Playlist"
                android:textColor="@color/white"
                android:textSize="30dp"></TextView>

        </LinearLayout>
    </LinearLayout>



<RelativeLayout
    android:id="@+id/download"
    android:layout_below="@id/top"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    >

    <ImageView
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@drawable/download"></ImageView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_baseline_cloud_upload_24"></ImageView>
</RelativeLayout>
    <RelativeLayout
        android:id="playlist"
        android:layout_width="400dp"
        android:layout_gravity="right"
        android:layout_height="50dp"
        android:orientation="vertical"
        android:layout_below="@id/download">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/buttonsforfgc">


        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Playlist Name"
            android:textColor="#FFC107"
            android:textSize="20dp"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/description"
        android:layout_width="400dp"
        android:gravity="center"
        android:layout_height="5dp"
        android:orientation="vertical"
        android:layout_below="@id/pl">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/buttonsforfgc"></ImageButton>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/pl"
        android:layout_below="@id/download"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        ></LinearLayout>
    <RelativeLayout
        android:id="@+id/desc"
        android:layout_below="@id/description"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_height="90dp"
        >

        <ImageButton
            android:layout_width="400dp"
            android:layout_height="300dp"

            android:background="@drawable/buttonsforfgc"></ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:fontFamily="sans-serif"
            android:gravity="left"
            android:text="Description"
            android:textColor="#FFC107"
            android:textSize="20dp"></TextView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/black2"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:layout_below="@id/desc"></RelativeLayout>

<RelativeLayout
    android:id="@+id/addplaylist"
    android:layout_below="@+id/black2"
    android:layout_width="600dp"
    android:layout_height="40dp"
    android:gravity="right">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/addpl"

        ></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Add playlist"
        android:textColor="@color/white"
        android:textSize="20dp"></TextView>
</RelativeLayout>
    <LinearLayout
        android:id="@id/black3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/addplaylist"
        android:background="@color/black"></LinearLayout>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/black3"
        android:background="#605757"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/heart">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_add_24"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_search_24"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_access_time_24"></ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#605757"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Liked"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#D4B300"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Add"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#D4B300"></TextView>
        </LinearLayout> <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Search"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#D4B300"></TextView>
    </LinearLayout> <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:text="Listen Later"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="#D4B300"></TextView>
    </LinearLayout>
    </LinearLayout>




</RelativeLayout>