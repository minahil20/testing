<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".uploadmusic">


    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_arrow_back_24"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">



            <TextView
                android:layout_width="900dp"
                android:layout_height="100dp"
                android:textAlignment="textStart"
                android:text="   Upload Music"
                android:textColor="@color/white"
                android:textSize="30dp"></TextView>

        </LinearLayout>
    </LinearLayout>



    <RelativeLayout
        android:id="@+id/download"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        >

        <ImageView
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:src="@drawable/download"></ImageView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_baseline_cloud_upload_24"></ImageView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/black"
        android:layout_below="@id/download"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/title"
        android:layout_below="@id/black"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/buttonsforfgc"></ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:fontFamily="sans-serif"
            android:text=" Title"
            android:textColor="#FFC107"
            android:textSize="25dp"></TextView>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/genre"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/buttonsforfgc"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=" Genre"
            android:textColor="#FFC107"
            android:textSize="25dp"
            android:fontFamily="sans-serif"></TextView>
    </RelativeLayout>
    <RelativeLayout
android:id="@+id/desc"
        android:layout_below="@id/genre"

        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="60dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:src="@drawable/buttonsforfgc"></ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text=" Description"
            android:textColor="#FFC107"
            android:textSize="25dp"
            android:fontFamily="sans-serif"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/buttons"
       android:layout_below="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:weightSum="2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/addpl">

            </ImageView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Upload"
                android:gravity="center"
                android:textColor="@color/white"></EditText>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.95">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/addpl"></ImageView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Record"
                android:textColor="@color/white"
                android:gravity="center"></EditText>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/buttons"
        android:background="#605757"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/heart">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_add_24"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_search_24"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_access_time_24"></ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#605757"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Liked"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#D4B300"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Add"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#D4B300"></TextView>
        </LinearLayout> <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Search"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#D4B300"></TextView>
    </LinearLayout> <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:text="Listen Later"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="#D4B300"></TextView>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>