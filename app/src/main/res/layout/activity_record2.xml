<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".record2">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_arrow_back_24"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">



            <TextView
                android:layout_width="900dp"
                android:layout_height="100dp"
                android:textAlignment="textStart"
                android:text="   Record"
                android:textColor="@color/white"
                android:textSize="30dp"></TextView>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/pic"
        android:layout_below="@id/top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/despacito"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/black"
        android:layout_below="@id/pic"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:id="@+id/time"
        android:layout_below="@id/black"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.45"
            android:textColor="#FFC107"
            android:fontFamily="sans-serif"
            android:textSize="20dp"
            android:textAlignment="center"></TextView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/record"
        android:layout_below="@id/time"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/recordx"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:id="@id/black2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/record"
        android:orientation="horizontal"></LinearLayout>
    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/black2"
        android:background="#605757"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/heart">

            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_add_24"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_search_24"></ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ic_baseline_access_time_24"></ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="#605757"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Liked"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#D4B300"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:text="Add"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textColor="#D4B300"></TextView>
        </LinearLayout> <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:text="Search"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#D4B300"></TextView>
    </LinearLayout> <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="28dp"
            android:text="Listen Later"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="#D4B300"></TextView>
    </LinearLayout>
    </LinearLayout>

</RelativeLayout>